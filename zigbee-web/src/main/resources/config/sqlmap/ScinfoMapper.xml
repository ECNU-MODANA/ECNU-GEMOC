<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smartcold.zigbee.manage.dao.ScinfoMapper">

	<select id="findInfoByKey" parameterType="map" resultType="ScinfoEntity">
		SELECT *
		FROM `sc_info` WHERE `key`=#{key} order by `addtime` asc
	</select>
	
	<select id="findInfoDeviceByKey" parameterType="map" resultType="ScInfoDeviceEntity">
		SELECT a.*,b.groupid,b.location
		FROM `sc_info` a LEFT JOIN sc_device b ON a.deviceid = b.id WHERE `KEY`=#{key} ORDER BY a.addtime asc
	</select>
	
	<select id="findOneInfoByKey" parameterType="map" resultType="ScinfoEntity">
		SELECT *
		FROM `sc_info` WHERE `key`=#{key} limit 1
	</select>

</mapper>